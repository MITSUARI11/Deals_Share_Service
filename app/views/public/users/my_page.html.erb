<div class="mx-auto" style="width: 600px;">
  <h1 class="text-center">マイページ</h1>
  
  <!--ユーザー情報-->
  <div class="row">
    <span class="col-2"><%= image_tag @user.get_icon_image(100, 100) %></span>
  </div>
  <table style="width: 100%;">
    <tr>
      <td class="m-1 border-bottom font-weight-bold" style="width: 100px;">ユーザー名</td>
      <td class="m-1 border-bottom"><%= @user.user_name %></td>
      <td class="text-right" style="width: 200px;"><%= link_to "プロフィール編集", edit_user_path(@user.id), class: "btn btn-outline-primary" %></td>
    </tr>
  </table>
  <div>
    <p class="my-2 border-bottom font-weight-bold" style="width: 100px;">プロフィール</p>
    <p class="p-1 border" style="width: auto; height: 100px;"><%= @user.profile %></p>
  </div>
  <!--ユーザーの投稿情報-->
  <div>
  <% @posts.each do |post| %>
    <% if post.post_image.present? %>
      <div class="m-1 border border-dark">
        <%= link_to post_path(post.id), style: "color: black; text-decoration: none;" do %>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">ショップジャンル</p>
            <p class="m-1"><%= post.shop_genre_i18n %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">店舗名</p>
            <p class="m-1"><%= post.shop_name %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">住所</p>
            <p class="m-1"><%= post.address %></p>
          </div>
          <div>
            <p class="text-center"><%= image_tag post.post_image, size: "500x500" %></p>
          </div>
          <div>
            <p class="m-1 font-weight-bold" style="width: 150px;">テキスト</p>
            <p class="mx-1 p-1 border" style="width: auto; height: 100px;"><%= post.posting_text %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="m-1 border border-dark">
        <%= link_to post_path(post.id), style: "color: black; text-decoration: none;" do %>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">ショップジャンル</p>
            <p class="m-1"><%= post.shop_genre_i18n %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">店舗名</p>
            <p class="m-1"><%= post.shop_name %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">住所</p>
            <p class="m-1"><%= post.address %></p>
          </div>
          <div>
            <p class="m-1 font-weight-bold" style="width: 150px;">テキスト</p>
            <p class="mx-1 p-1 border" style="width: auto; height: 100px;"><%= post.posting_text %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
  </div>
  
  <!--ページネーション-->
  <div class="p-1">
    <%= paginate @posts %>
  </div>
</div>
