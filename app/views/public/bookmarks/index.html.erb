<div class="mx-auto" style="width: 600px;">
  <h1 class="text-center">ブックマーク一覧</h1>

  <% @bookmarks.each do |bookmark| %>
    <% if bookmark.post.post_image.present? %>
      <div class="m-1 border border-dark">
        <%= link_to post_path(bookmark.post.id), style: "color: black; text-decoration: none;" do %>
          <div class="d-flex border-bottom border-secondary align-items-center">
            <p class="m-1"><%= image_tag bookmark.user.get_icon_image(100,100) %></p>
            <h4 class="m-1"><%= bookmark.user.user_name %></h4>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">ショップジャンル</p>
            <p class="m-1"><%= bookmark.post.shop_genre_i18n %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">店舗名</p>
            <p class="m-1"><%= bookmark.post.shop_name %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">住所</p>
            <p class="m-1"><%= bookmark.post.address %></p>
          </div>
          <div>
            <p class="text-center"><%= image_tag bookmark.post.post_image, size: "200×200" %></p>
          </div>
          <div>
            <p class="m-1 font-weight-bold" style="width: 150px;">テキスト</p>
            <p class="mx-1 p-1 border" style="width: auto; height: 100px;"><%= bookmark.post.posting_text %></p>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="m-1 border border-dark">
        <%= link_to post_path(bookmark.post.id), style: "color: black; text-decoration: none;" do %>
          <div class="d-flex border-bottom border-secondary align-items-center">
            <p class="m-1"><%= image_tag bookmark.user.get_icon_image(100,100) %></p>
            <h4 class="m-1"><%= bookmark.user.user_name %></h4>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">ショップジャンル</p>
            <p class="m-1"><%= bookmark.post.shop_genre_i18n %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">店舗名</p>
            <p class="m-1"><%= bookmark.post.shop_name %></p>
          </div>
          <div class="d-flex">
            <p class="m-1 font-weight-bold" style="width: 150px;">住所</p>
            <p class="m-1"><%= bookmark.post.address %></p>
          </div>
          <div>
            <p class="m-1 font-weight-bold" style="width: 150px;">テキスト</p>
            <p class="mx-1 p-1 border" style="width: auto; height: 100px;"><%= bookmark.post.posting_text %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
