<div class="mx-auto" style="width: 600px;">
  <h1 class="text-center">フォロー一覧</h1>
  <% if @users.exists? %>
    <% @users.each do |user| %>
      <div class="border">
        <%= link_to user_path(user.id), style: "color: black; text-decoration: none;" do %>
          <table>
            <tr>
              <td><%= image_tag user.get_icon_image(100, 100) %></td>
              <td><%= user.user_name %></td>
            </tr>
          </table>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <p>ユーザーはいません</p>
  <% end %>
</div>



