<h1>プロフィール編集</h1>

<%= form_with model: @user do |f| %>
  <div class="field">
    <%= f.label :icon_image, "アイコン画像" %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>
          
  <div class="field">
    <%= f.label :user_name, "アカウント名" %><br>
    <%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %>
  </div>
  
  <div class="field">
    <%= f.label :profile, "プロフィール" %><br>
    <%= f.text_area :profile %> 
  </div>
  
  <div class="field">
    <%= f.label :email, "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>
  
  <%= f.submit "変更を保存" %>

<% end %>
